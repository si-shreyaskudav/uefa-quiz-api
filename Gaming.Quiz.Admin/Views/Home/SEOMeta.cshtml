
@{
    ViewData["Title"] = "SEOMeta";
}

@model Gaming.Quiz.Admin.Models.SEOModel

<form id="seometamanagementForm" action="@String.Concat(ViewBag.BasePath, "SEOMeta")" method="post">
    <div class="content-wrapper">
        <div class="container">
            <div class="row pad-botm">
                <div class="col-md-12">
                    <h4 class="header-line">SEO Meta Management</h4>
                </div>
            </div>

            @await Component.InvokeAsync("Message", new { component = ViewBag?.MessageType, message = ViewBag?.MessageText })

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <div class="dataTables_wrapper form-inline" role="grid">
                                <table class="table table-striped table-bordered table-hover dataTable no-footer">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Asset</th>
                                            <th class="text-center">Body</th>
                                            <th class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center">Home</td>
                                            <td class="text-center">
                                                <textarea asp-for="metaHtmlHome" rows="4" cols="70"
                                                          placeholder="*SEOHomeMetaTags" class="form-control">
                                                </textarea>
                                            </td>
                                            <td class="text-center">
                                                <button type="submit" class="btn btn-info" onclick="return submitAlert();" name="process" value="home">Populate</button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-center">Leaderboard</td>
                                            <td class="text-center">
                                                <textarea asp-for="metaHtmlLeaderboard" rows="4" cols="70"
                                                          placeholder="*SEOLeaderbaordMetaTags" class="form-control">
                                                </textarea>
                                            </td>
                                            <td class="text-center">
                                                <button type="submit" class="btn btn-info" onclick="return submitAlert();" name="process" value="leaderbaord">Populate</button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-center">Terms</td>
                                            <td class="text-center">
                                                <textarea asp-for="metaHtmlTerms" rows="4" cols="70"
                                                          placeholder="*SEOTermsMetaTags" class="form-control">
                                                </textarea>
                                            </td>
                                            <td class="text-center">
                                                <button type="submit" class="btn btn-info" onclick="return submitAlert();" name="process" value="terms">Populate</button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-center">Rules</td>
                                            <td class="text-center">
                                                <textarea asp-for="metaHtmlRules" rows="4" cols="70"
                                                          placeholder="*SEORulesTags" class="form-control">
                                                </textarea>
                                            </td>
                                            <td class="text-center">
                                                <button type="submit" class="btn btn-info" onclick="return submitAlert();" name="process" value="rules">Populate</button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-center">Disclaimer</td>
                                            <td class="text-center">
                                                <textarea asp-for="metaHtmlDisclaimer" rows="4" cols="70"
                                                          placeholder="*SEODisclaimerMetaTags" class="form-control">
                                                </textarea>
                                            </td>
                                            <td class="text-center">
                                                <button type="submit" class="btn btn-info" onclick="return submitAlert();" name="process" value="disclaimer">Populate</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br />
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



